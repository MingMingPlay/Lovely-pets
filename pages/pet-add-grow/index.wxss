.pet-add-grow {
  width: 100%;
  overflow: hidden;
}
.pet-grow-wrap {
  width: 100%;
  background-color: #fff;
  margin-top: 18rpx;
  overflow: hidden;
  border-top: 1rpx solid #E5E5E5;
  border-bottom: 1rpx solid #E5E5E5;
}
.pet-grow-item {
  float: left;
  width: 100%;
  margin: 22rpx 0;
  overflow: hidden;
}
.pet-grow-title {
  float: left;
  height: 48rpx;
  font-size: 34rpx;
  font-weight: 400;
  color: rgba(0,0,0,1);
  line-height: 48rpx;
  margin: 42rpx 0 0 30rpx;
}
.grow-add-icon {
  float: right;
  width: 299rpx;
  height: 179rpx;
  background: rgba(233,233,233,1);
  margin-right: 38rpx;
}
.grow-add-trips {
  float: right;
  font-size: 28rpx;
  font-weight: 400;
  color: rgba(136,136,136,1);
  line-height: 40rpx;
  margin: 28rpx 40rpx 64rpx 0;
}
.pet-grow-main {
  width: 100%;
  overflow: hidden;
}
.pet-photo-item {
  float: left;
  width: 299rpx;
  height: 179rpx;
  margin: 10rpx 37rpx 20rpx 38rpx;
}
.pet-photo-item image,video {
  width: 100%;
  height: 100%;
}