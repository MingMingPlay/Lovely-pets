/**index.wxss**/ 
.pet-shop-detail {
  width: 710rpx;
  height: 798rpx;
  background: rgba(255,255,255,1);
  border-radius: 8rpx;
  margin: 0 auto;
  margin-top: 22rpx;
  overflow: hidden;
}
.pet-shop-image {
  width: 668rpx;
  height: 400rpx;
  margin: 0 auto;
  margin-top: 19rpx;
}
.pet-shop-image image {
  width: 100%;
  height: 100%;
  background-size: 100%;
  background-repeat: no-repeat;
}
.pet-shop-name {
  width: 668rpx;
  height: 48rpx;
  margin: 0 auto;
  margin-top: 17rpx;
  font-size: 34rpx;
  font-weight: 400;
  color: rgba(58,68,74,1);
  line-height: 48rpx;
}
.middle-line {
  width: 668rpx;
  margin: 0 auto;
  margin-top: 40rpx;
  border: 1rpx dashed #CCCCCC;
}
.shop-master-part {
  width: 668rpx;
  height: 60rpx;
  line-height: 60rpx;
  margin: 0 auto;
  margin-top: 22rpx;
}
.shop-master-photo {
  float: left;
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-left: 8rpx;
  border: 1rpx solid red;
}
.shop-master-photo image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.shop-master-name {
  float: left;
  font-size: 28rpx;
  font-weight: 400;
  color: rgba(68,78,83,1);
  margin-left: 20rpx;
}
.shop-master-detail {
  float: right;
  font-size: 28rpx;
  font-weight: 400;
  color: rgba(59,184,58,1);
}
.shop-share {
  margin-right: 50rpx;
}
.shop-des {
  width: 668rpx;
  margin: 0 auto;
  margin-top: 46rpx;
  font-size: 28rpx;
  font-weight: 400;
  color: rgba(68,78,83,1);
  line-height: 40rpx;
}
.shop-pet-list {
  width: 750rpx;
  background-color: rgba(255,255,255,1);
  margin-top: 20rpx;
  overflow: hidden;
}
.shop-pet-part {
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 28rpx;
  font-weight: 400;
  margin: 12rpx 0 16rpx 0;
}
.shop-pet-num {
  float: left;
  color: rgba(68,78,83,1);
  margin-left: 38rpx;
}
.shop-pet-manage {
  float: right;
  color: rgba(59,184,58,1);
  margin-right: 40rpx;
}
.separate-line {
  height: .5rpx;
  border-top: .25rpx solid rgba(221,221,221,1);
}