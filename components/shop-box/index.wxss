.shop-box {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  z-index: 999;
  background-color: rgba(0,0,0,.5);
}
.shop-box-main {
  position: relative;
  width: 540rpx;
  height: 520rpx;
  background: rgba(255,255,255,0.96);
  border-radius: 20rpx;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  overflow: hidden;
}
.shop-box-title {
  width: 100%;
  height: 48rpx;
  margin-top: 40rpx;
  text-align: center;
  font-size: 34rpx;
  font-weight: 500;
  color: rgba(0,0,0,1);
  line-height: 48rpx;
}
.shop-box-content {
  margin-top: 28rpx;
  width: 100%;
}
.shop-box-item {
  width: 100%;
  font-size: 28rpx;
  overflow: hidden;
  margin-bottom: 13rpx;
}
.box-item-label {
  float: left;
  color: #9B9B9B;
  line-height: 44rpx;
  margin-left: 28rpx;
}
.box-item-value {
  width: 280rpx;
  float: left;
  color: #000;
  line-height: 44rpx;
  margin-left: 40rpx;
}
.box-item-btn {
  float: right;
  width: 77rpx;
  height: 40rpx;
  border-radius: 4rpx;
  border: 2rpx solid #1AAD19;
  color: #1AAD19;
  margin-right: 22rpx;
  font-size: 24rpx;
  text-align: center;
  line-height: 40rpx;
}
.shop-box-footer {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 94rpx;
  line-height: 94rpx;
  text-align: center;
  border-top: 1rpx solid rgba(242,242,242,1);
  font-size: 36rpx;
  font-weight: 400;
  color: rgba(16,142,233,1);
}