.shop-card {
  width: 710rpx;
  height: 540rpx;
  margin: 0 auto;
  margin-top: 20rpx; 
  background-color: rgba(255,255,255,1);
  border-radius: 8rpx;
  overflow: hidden;
}
.shop-img {
  width: 668rpx;
  height: 420rpx;
  margin: 0 auto;
  margin-top: 20rpx;
}
.shop-img image {
  width: 100%;
  height: 100%;
  background-size: 100%;
  background-repeat: no-repeat;
}
.shop-name-part {
  width: 668rpx;
  height: 48rpx;
  margin: 0 auto;
  margin-top: 20rpx;
}
.shop-name {
  float: left;
  color: rgba(58,68,74,1);
  font-weight:400;
  font-size: 34rpx;
  line-height: 48rpx;
}
.shop-visited-time {
  float: right;
  color: rgba(144,146,165,1);
  font-size: 23rpx;
  line-height: 48rpx;
  font-weight:400;
}
.visited-time-label::before {
  content: '最近访问：'
}