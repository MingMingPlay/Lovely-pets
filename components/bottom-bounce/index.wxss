/*动画前初始位置*/ 
.bottom-pos{
  -webkit-transform:translateY(100%);
  transform:translateY(100%);
}
.bottom-bounce {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  z-index: 999;
  background-color: rgba(0,0,0,.5);
}
.bottom-bounce-main {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 328rpx;
  background-color: rgb(236,236,236);
}
.bottom-share-part {
  width: 100%;
  height: 239rpx;
  display: flex;
  align-items: center;
}
.bottom-share-item {
  width: 101rpx;
  margin-left: 36rpx;
  text-align: center;
}
.bottom-share-icon {
  width: 101rpx;
  height: 101rpx;
  background: rgba(255,255,255,1);
  border-radius: 14rpx;
  border: 1rpx solid rgba(255,255,255,1);
}
.bottom-share-icon image {
  width: 100%;
  height: 100%;
  background-size: 100%;
  background-repeat: no-repeat;
}
.bottom-share-name {
  height: 22rpx;
  font-size: 20rpx;
  font-weight: 400;
  color: rgba(155,155,155,1);
  line-height: 22rpx;
  margin-top: 14rpx;
}
.bottom-close-btn {
  width: 100%;
  height: 91rpx;
  line-height: 91rpx;
  background-color: #fff;
  text-align: center;
  font-size: 33rpx;
  font-weight: 400;
  color:rgba(0,0,0,1);
}
.btn-mask {
  position: absolute;
  width: 101rpx;
  z-index: 99;
  left: 36rpx;
  height: 130rpx;
  opacity:0
}