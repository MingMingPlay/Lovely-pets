.poster-card {
  width: 710rpx;
  margin: 0 auto;
  margin-top: 22rpx;
  background: rgba(255,255,255,1);
  border-radius: 8rpx;
  overflow: hidden;
}
.poster-card-main {
  width: 668rpx;
  margin: 0 auto;
  margin-top: 19rpx;
  overflow: hidden;
  padding-bottom: 50rpx; 
}
.poster-card-img {
  width: 100%;
  height: 400rpx;
}
.poster-card-img image {
  width: 100%;
  height: 100%;
  background-repeat: no-repeat;
  background-size: 100%; 
}
.poster-card-content {
  width: 100%;
  height: 244rpx;
}
.poster-des-icon {
  width: 68rpx;
  height: 92rpx;
  line-height: 196rpx;
  font-size: 144rpx;
  color:rgba(204,204,204,1);
}
.poster-des-before {
  position: relative;
  z-index: 99;
  float: left;
  top: -64rpx;
}
.poster-des-after {
  position: relative;
  z-index: 99;
  float: right;
  top: -52rpx;
}
.poster-card-des {
  width: 538rpx;
  font-size: 28rpx;
  font-weight: 400;
  color: rgba(68,78,83,1);
  line-height: 40rpx;
  margin: 0 auto;
  margin-top: 77rpx;
}
.poster-self-info {
  width: 100%;
  height: 186rpx;
  overflow: hidden;
}
.poster-self-item {
  float: left;
  width: 50%;
  height: 186rpx;
}
.poster-self-name {
  width: 240rpx;
  height: 48rpx;
  font-size: 34rpx;
  font-weight: 400;
  color: rgba(58,68,74,1);
  line-height: 48rpx;
}
.poster-self-addr {
  height: 42rpx;
  font-size: 28rpx;
  color: rgba(167,167,167,1);
  line-height: 38rpx;
  margin: 20rpx 0;
}
.poster-self-pets {
  width: 194rpx;
  height: 40rpx;
  font-size: 28rpx;
  font-weight: 400;
  color: rgba(167,167,167,1);
  line-height: 40rpx;
}
.poster-self-qrcode {
  float: right;
  width: 200rpx;
  height: 186rpx;
}
.poster-self-qrcode image {
  width: 100%;
  height: 100%;
  background-repeat: no-repeat;
  background-size: 100%;
}
.poster-created-btn {
  width: 690rpx;
  height: 84rpx;
  background: rgba(26,173,25,1);
  border-radius: 8rpx;
  border: 2rpx solid rgba(26,173,25,1);
  margin: 0 auto;
  margin-top: 40rpx;
  font-size: 34rpx;
  font-weight: 400;
  color: rgba(255,255,255,1);
  line-height: 84rpx;
  text-align: center;
}